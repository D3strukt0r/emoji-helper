    "chrome",
    "extension",
    "emoji"
  ],
  "homepage": "https://github.com/D3strukt0r/emoji-helper",
  "bugs": {
    "url": "https://github.com/D3strukt0r/emoji-helper/issues",
    "email": "gh-contact@d3st.dev"
  },
  "license": "MIT",
  "author": {
    "name": "D3strukt0r",
    "email": "gh-contact@d3st.dev",
